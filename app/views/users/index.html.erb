<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>
<br/><br/>
<div class="panel">
	<div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>
              <th>Password</th>
              <th>&nbsp;</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.email %></td>
                <td><%= user.password %></td>
                <td><%= link_to 'Show', user, class: "btn btn-primary anchor" %>&nbsp;
                    <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning anchor" %>&nbsp;
                    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger anchor" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-default anchor" %>
